@model ProjectFormModel

<div class="modal fade" id="editProjectModal" tabindex="-1" aria-labelledby="editProjectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-container">


                <div class="modal-header">
                    <h3 class="modal-title" id="editProjectModalLabel">Edit Project</h3>
                    <button type="button" class="btn-close" onclick="closeEditProjectModal()" aria-label="Close"></button>
                </div>


                <div class="modal-image-upload text-center">
                    <i class="fa-solid fa-camera"></i>
                </div>

                <div class="modal-body">

                    @await Html.PartialAsync("Partials/Forms/_EditProjectForm", Model)

                </div>

            </div>
        </div>
    </div>
</div>