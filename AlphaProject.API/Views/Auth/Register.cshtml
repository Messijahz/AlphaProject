@model AlphaProject.API.Models.SignUpFormModel

@{
    Layout = "_CleanLayout";
    ViewData["Title"] = "Register";
}

<div class="center-screen">
    <div class="surface create-account-form">

        <h1 class="center-content">Create Account</h1>

        @await Html.PartialAsync("Partials/Components/_GoogleButton", new GoogleButtonViewModel { ButtonText = "Sign up with Google" })

        <div class="center-content divider">
            <span class="small-text">OR</span>
        </div>

        <form asp-action="Register" asp-controller="Auth" method="post" class="form-container" novalidate>

            <div class="field-group">
                <label for="FullName" class="form-label form-label-first">Full Name</label>
                <div class="input-wrapper">
                    <input asp-for="FullName" type="text" class="form-input" placeholder="Your full name" />
                    <span asp-validation-for="FullName"></span>
                </div>
            </div>

            <div class="field-group">
                <label for="Email" class="form-label">Email</label>
                <div class="input-wrapper">
                    <input asp-for="Email" type="email" class="form-input" placeholder="Your email address" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="field-group">
                <label for="Password" class="form-label">Password</label>
                <div class="input-wrapper">
                    <input asp-for="Password" type="password" class="form-input" placeholder="Enter your password">
                    <span asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="field-group">
                <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                <div class="input-wrapper">
                    <input asp-for="ConfirmPassword" type="password" class="form-input form-input-last" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>

            <div class="field-group">
                <div class="input-wrapper">
                    <div class="checkbox-container">
                        <input asp-for="AcceptTerms" type="checkbox" />
                        <label for="AcceptTerms">I accept <a href="#">Terms and Conditions</a></label>
                        <span asp-validation-for="AcceptTerms"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-blue">Create Account</button>
        </form>

        <div class="center-content account-footer">
            <p>Already have an account? <a asp-controller="Auth" asp-action="Login">Login</a></p>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}